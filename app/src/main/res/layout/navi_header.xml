<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nh_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/navi_photo"
        android:layout_centerInParent="true"/>
    <TextView
    android:id="@+id/nh_mail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="644419778@qq.com"
    android:textSize="14sp"
    android:textColor="#FFF"/>
    <TextView
        android:id="@+id/nh_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nh_mail"
        android:text="Liujy"
        android:textSize="14sp"
        android:textColor="#FFF"/>

</RelativeLayout>