<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开百度"
        android:background="@drawable/bg_btn2"
        />

    <Button
        android:id="@+id/button_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_ev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="事件机制"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据存储"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_okhttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http网络通信"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_MaterialDesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MaterialDesignUI"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多线程服务"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification通知"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动service服务"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <Button
        android:id="@+id/button_upload_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传拍照或者相册照片"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        />
    <TextView
        android:id="@+id/name_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/screen2"
        android:textSize="11pt" />
    </LinearLayout>
</ScrollView>